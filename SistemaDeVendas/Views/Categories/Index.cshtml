@model IEnumerable<SistemaDeVendas.Models.Categories>

@{
    ViewData["Title"] = "Categorias";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />    
</head>
<body>
    
<table class="table table-hover table-striped">
    <thead>
        <tr>
            <th class="col-md-9">
                @Html.DisplayNameFor(model => model.Name)
            </th>                
    <p class="col-md-2">
        <a asp-action="Create" class="btn btn-primary"><i class="bi bi-tags-fill"></i> Criar Nova</a>
    </p>                                
        </tr>            
    </thead>
    <tbody>
@foreach (var item in Model) {                        
                <tr>
                    <td data-bs-toggle="collapse" href="#Collapse_@item.CategoryId" role="button" aria-expanded="true" aria-controls="Collapse_@item.CategoryId" onmouseover="$('#Collapse_@item.CategoryId').collapse('show');clearTimeout();" onmouseout="setTimeout(function(){$('#Collapse_@item.CategoryId').collapse('hide');}, 2000);">
                    <p>
                            <a>@Html.DisplayFor(modelItem => item.Name)</a>
                    </p>                    
                        <div class="collapse" id="Collapse_@item.CategoryId">
                    <div class="card card-body col-md-4">
                        <p>
                            <a class="btn btn-primary " asp-action="Edit" asp-route-id="@item.CategoryId"><i class="bi bi-pencil-fill"></i> Editar</a>
                            <a class="btn btn-danger " asp-action="Delete" asp-route-id="@item.CategoryId"><i class="bi bi-trash-fill"></i> Apagar</a>
                        </p>
                    </div>                    
                </div>
            </td>            
        </tr>
}
    </tbody>
</table>

    @section Scripts {
        @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }        
    }
</body>
</html>
